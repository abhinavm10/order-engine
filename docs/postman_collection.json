{
  "info": {
    "name": "Order Execution Engine",
    "description": "API collection for the Order Execution Engine (Fastify + Redis + BullMQ)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/health",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["health"]
        }
      },
      "response": []
    },
    {
      "name": "Execute Order",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          },
          {
            "key": "Idempotency-Key",
            "value": "{{$guid}}",
            "type": "text",
            "description": "Unique key to prevent duplicate orders"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"type\": \"market\",\n    \"tokenIn\": \"SOL\",\n    \"tokenOut\": \"USDC\",\n    \"amount\": \"1.5\",\n    \"slippage\": \"0.01\"\n}"
        },
        "url": {
          "raw": "http://localhost:3000/api/orders/execute",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "orders", "execute"]
        }
      },
      "response": []
    },
    {
      "name": "Get Order Status",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/api/orders/:orderId",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "orders", ":orderId"],
          "variable": [
            {
              "key": "orderId",
              "value": "REPLACE_WITH_UUID"
            }
          ]
        }
      },
      "response": []
    },
    {
      "name": "WebSocket Stream",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "ws://localhost:3000/api/orders/execute?orderId=REPLACE_WITH_UUID",
          "protocol": "ws",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "orders", "execute"],
          "query": [
            {
              "key": "orderId",
              "value": "REPLACE_WITH_UUID"
            }
          ]
        },
        "description": "Connect to WebSocket to receive real-time updates"
      },
      "response": []
    }
  ]
}
